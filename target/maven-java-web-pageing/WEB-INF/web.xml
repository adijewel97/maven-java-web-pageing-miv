<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <display-name>MIV Web</display-name>

    <!-- Definisikan servlet MIVController -->
    <servlet>
        <servlet-name>MIVController</servlet-name>
        <servlet-class>com.example.controller.MIVController</servlet-class>
    </servlet>

    <!-- Mapping servlet ke URL /MIV -->
    <servlet-mapping>
        <servlet-name>MIVController</servlet-name>
        <url-pattern>/MIV</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MonRekonPerUpiController</servlet-name>
        <servlet-class>com.example.controller.MonRekonPerUpiController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonRekonPerUpiController</servlet-name>
        <url-pattern>/mon-rekon-bankvsperupi</url-pattern>
    </servlet-mapping>

</web-app>
