<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <display-name>BPBL Web</display-name>

    <!-- Definisikan servlet BpblController -->
    <servlet>
        <servlet-name>BpblController</servlet-name>
        <servlet-class>com.example.controller.BpblController</servlet-class>
    </servlet>

    <!-- Mapping servlet ke URL /bpbl -->
    <servlet-mapping>
        <servlet-name>BpblController</servlet-name>
        <url-pattern>/bpbl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MonRekonPerUpiController</servlet-name>
        <servlet-class>com.example.controller.MonRekonPerUpiController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonRekonPerUpiController</servlet-name>
        <url-pattern>/mon-rekon-bankvsperupi</url-pattern>
    </servlet-mapping>

</web-app>
